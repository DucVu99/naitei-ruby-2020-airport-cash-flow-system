<div class="modal fade" id="approveConfirmModal" tabindex="-1" role="dialog" aria-labelledby="approveConfirmModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <%= form_for [manager, request], remote: true do |f| %>
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"><%= t ".confirm_approve" %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= hidden_field_tag "request[status_id]", Settings.status.approved %>
          <button type="button" class="btn btn-secondary col-3" data-dismiss="modal"><%= t ".close_btn" %></button>
          <%= f.submit t(".approve"), class: "btn btn-success float-right col-3" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
