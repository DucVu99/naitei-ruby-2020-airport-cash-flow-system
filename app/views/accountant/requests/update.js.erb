$("#reject_btn").remove()
$("#paid_btn").remove()
<% if params[:request][:status] == Request.statuses.key(Settings.status.request.rejected) %>
  $("#req_status_name").html($("#reject-label"))
  $("#rejectConfirmModal").modal('hide');
<% else %>
  $("#req_status_name").html($("#paid-label"))
  $("#paidConfirmModal").modal('hide');
<% end %>
